extends ../layout
block content
    .container
      .col-xs-12
        .row
          .text-center
            h2 Sign up (or sign in with your existing account)
            br
            a.btn.btn-lg.btn-block.btn-social.btn-facebook(href='/auth/facebook')
              i.fa.fa-facebook
              | Continue with Facebook
            a.btn.btn-lg.btn-block.btn-social.btn-google(href='/auth/google')
              i.fa.fa-google
              | Continue with Google
            a.btn.btn-lg.btn-block.btn-social.btn-github(href='/auth/github')
              i.fa.fa-github
              | Continue with GitHub
            h4 Or
            a.btn.btn-lg.btn-block.btn-social.btn-primary(id='email-signin')
              i.fa.fa-envelope
              | Continue with your email
        .row
          .text-center
            br
            br
            p  By signing up you indicate that you have read 
              |  and agree to freeCodeCamp's 
              a(href='/terms' target='_blank' rel='noopener noreferrer') 
                | Terms of Service 
              |  and 
              a(href='/privacy' target='_blank' rel='noopener noreferrer') 
                | Privacy Policy.

    script(src="https://cdn.auth0.com/js/lock/11.7.2/lock.min.js")
    script(src="/js/signin.js")
