{
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "root": true,
  "extends": [
    "./.eslintrc-base.json",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "react",
    "import",
    "prefer-object-spread",
    "prettier",
    "react-hooks",
    "jsx-a11y"
  ],
  "globals": {
    "Promise": true,
    "window": true,
    "$": true,
    "ga": true,
    "jQuery": true,
    "router": true
  },
  "settings": {
    "react": {
      "version": "16.4.2",
      "import/ignore": [
        "node_modules",
        "\\.json$"
      ],
      "import/extensions": [
        ".js",
        ".jsx",
        ".tsx"
      ]
    }
  },
  "overrides": [{
    "files": ["**/*.@(tsx|ts)"],
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  }]
}
