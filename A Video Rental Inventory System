publicclassVideoRentalextendsVideoStore {

	publicstaticvoid main(String[] args) 
    {
        Video vid = newVideo();
VideoStoreobj1= newVideoStore();
        String movname;
intrate;
intchoice;
        Scanner sc = new Scanner(System.in);
while(true)
        {
	System.out.println("MAIN MENU");
	System.out.println("=========");
            System.out.println("1 Add Video");
            System.out.println("2 List Inventory ");
            System.out.println("3 Receive Rating");
            System.out.println("4 Check the Rating");
            System.out.println("5 Checkout video");
            System.out.print("Please enter your choice: ");
choice = sc.nextInt();

switch(choice) {
case 1:
	System.out.println("Enter the name of the movie you want to add");
movname = sc.next();
addVideo(movname);
break;

case 2:
	 System.out.println("The  movies available in the inventory are");
listInventory();
break;

case 3:
                System.out.println("Enter the name of the movie");
movname = sc.next();
                System.out.println("Enter the rating of the movie");
rate = sc.nextInt();
obj1.receiveRating(movname,rate);
break;
case 4:
vid.getRating();
break;
case 5:
	System.out.println("Enter the name of the movie you want to Checkout");
movname = sc.next();
obj1.doCheckout(movname);
break;
default:
                System.out.println("Please enter a valid option from the menu given above");
            }
            System.out.println("Do you want to continue[Y/N]");
            String conti=null;
conti = sc.next();
if((conti.equals("N")) || (conti.equals("n")))
            {
                System.out.println("Thank you for using the program");
System.exit(0);
            }
elseif ((conti.equals("Y")) || (conti.equals("y")))
            {
continue;
            }
else
            {
                System.out.println("Please enter a valid option [Either Y or N]");
continue;
            }}}}
