classVideoStoreextends Video
{
staticVideo[] store = new Video[10];
staticinti=0;
staticvoidaddVideo(String name)
    {
store[i]= newVideo();
store[i].videoname = name;    
i++;
    }
voiddoCheckout(String name)
    {
booleanflag= false;
for( intj = 0 ; j<i ; j++)
        {
