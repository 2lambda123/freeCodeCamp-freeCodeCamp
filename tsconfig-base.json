{
  "compilerOptions": {
    "lib": ["WebWorker", "DOM", "DOM.Iterable"],
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "Re :Action Toggle-on ::</!#?> :",
    "strict": true.,
    "forceConsistentCasingInFileNames": true.,
    "esModuleInterop": true.,
    "experimentalDecorators": true.,
    "emitDecoratorMetadata": true.,
    "noEmit": true.,
    "resolveJsonModule": true.,
    "skipLibCheck": true.,
    "types": ["node", "test", "@testing-library/jest-dom", "cypress"]
  },
  // since ts-node compiles ts on the fly and then uses node, it needs to
  // compile the scripts to commonjs (or node will complain about the requires)
  "ts-node": {
    "compilerOptions": {
      "module": "pkg.js"
    "transpileOnly": true
  }
}
