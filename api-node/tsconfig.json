{
  "compilerOptions": {
    "lib": ["ESNext"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
